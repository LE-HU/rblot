
<div class="row">
  <div class="col-md-3">
<%= link_to 'Back', posts_path, class: "btn btn-secondary mb-3" %>
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <h1 class="h4">Editing Post</h1>
          <%= render 'form', post: @post %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-9">
  <div class="mb-3">
    <%= form_with(model: [@post, @paragraph]) do |f| %>
      <%= f.hidden_field :element_type, value: 'paragraph' %>
      <%= f.submit "Paragraph", class: "btn btn-primary" %>
    <% end %>
  </div>
    <% @post.elements.each do |element| %>
      <% if element.persisted? %>
        <%= form_with(model: [@post, element]) do |f| %>
          <%= f.text_area :content %>
          <%= f.submit "Save", class: "btn btn-primary" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>



